<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <header class="flex">
      <button>
        <a href="/article">Home</a>
      </button>
      <h1>All Articals Are here</h1>
      <div>
        <button>
          <a href="/article/new"> Add New Article </a>
        </button>
        <button>
          <a href="users/login">Log out</a>
        </button>
      </div>
    </header>
    <main class="article-view">
      <% if (articles.length) { %> <% articles.forEach(a => { %>
      <a href="/article/<%= a.id %>">
        <h2><%= a.title %></h2>
      </a>
      <% }) %> <% } else { %>
      <h2>No Articles Present...</h2>
      <% } %>
    </main>
  </body>
</html>
